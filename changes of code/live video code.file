<!-- =================== CSS =================== -->
<style>
.like-video {
  padding: 4rem 1rem;
  text-align: center;
}

.like-video__container {
  max-width: 900px;
  margin: 0 auto;
}

.like-video__wrapper {
  position: relative;
  display: inline-block;
  width: 100%;
  max-width: 800px;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 6px 18px rgba(0,0,0,0.2);
}

/* Video style */
.like-video__player {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
  border-radius: 16px;
}

/* Mute/Unmute button */
.mute-btn {
  position: absolute;
  bottom: 15px;
  right: 15px;
  background: rgba(0,0,0,0.6);
  border: none;
  color: white;
  font-size: 1.5rem;
  border-radius: 50%;
  padding: 10px 14px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.mute-btn:hover {
  background: rgba(0,0,0,0.8);
}

/* Caption below video (⬇️ pushed down below dots) */
.video-caption {
  margin-top:0.8rem; /* more space between dots and caption */
  font-size: 1rem;/*original ::: 1rem*/
  color: var(--first-color)/*original #444*/;
  font-weight: 500;
  text-align: center;
}

/* Swiper customization */
.swiper {
  width: 100%;
  padding: 2rem 0;
}

.swiper-pagination {
  margin-top: 1rem;
  position: relative;
}

.swiper-pagination-bullet-active {
  background: #333;
}

/* Responsive layout */
@media (max-width: 768px) {
  .like-video__wrapper {
    max-width: 100%;
    border-radius: 12px;
  }
}
</style>

<!-- =================== JS =================== -->

<!-- SwiperJS CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  // Init Swiper (✅ only dots, no arrows)
  const swiper = new Swiper(".like-video-swiper", {
    loop: true,
    spaceBetween: 20,
    centeredSlides: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    on: {
      init: function () {
        // Autoplay first video on load
        const firstVideo = this.slides[this.activeIndex].querySelector("video");
        if (firstVideo) firstVideo.play();
      },
      slideChange: function () {
        // Pause all videos
        document.querySelectorAll(".like-video__player").forEach((vid) => {
          vid.pause();
        });

        // Play current active video
        const activeSlide = this.slides[this.activeIndex];
        const activeVideo = activeSlide.querySelector("video");
        if (activeVideo) activeVideo.play();
      }
    }
  });

  // Mute/Unmute buttons
  document.querySelectorAll(".mute-btn").forEach((btn) => {
    const vid = btn.previousElementSibling;
    btn.addEventListener("click", () => {
      vid.muted = !vid.muted;
      btn.textContent = vid.muted ? "🔇" : "🔊";
    });
  });
</script>